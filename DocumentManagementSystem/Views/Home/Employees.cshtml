<form asp-action="Employees" asp-controller="Home" method="get" asp-antiforgery="true">
<div class="modal fade" id="findEmploee" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Поиск</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- SOME CODE HERE MOTHERFUCKER -->
                <div>
                    <p>Введите код работника: <input name="Id" type="text" class="form-control mForm-4" placeholder="">
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-doc" data-bs-dismiss="modal">Найти</button>
            </div>
        </div>
    </div>
</div>
