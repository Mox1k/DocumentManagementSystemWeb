@model DocumentManagementSystem.Models.DocumentPageModel;

<div class="container" style="height: 100vh; overflow: hidden;">
        <div class="mCont">
            <form asp-action="CreateDocument" asp-controller="Home" asp-anti-forgery="true">
            <div class="row">
                <div class="justify-content-end d-flex">
                    <a asp-action="Index" asp-controller="Home">
                        <div class="exit btn-close"></div>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex justify-content-between justify-content-center align-items-center">
                    <div>
                        <div class="btn btn-doc" onclick="download()">Сохранить документ</div>
                        <button type="submit" class="btn btn-doc">Сохранить в базу данных</button>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-2">
                    <label for="exampleInputEmail1">Название: </label>
                    <input asp-for="@Model.Model1.Name" type="text" class="form-control mForm" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-5">
                    <label for="exampleInputEmail1">Дата: </label>
                    <input asp-for="@Model.Model1.Date" id="startDate" class="form-control mForm" type="date" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <label for="exampleInputEmail1">Текст: </label>
                    <textarea asp-for="@Model.Model1.Text" type="email" class="form-control mForm-2" id="mytextarea"
                        aria-describedby="createTextInput" placeholder="Перетащите txt файл сюда для загрузки"></textarea>
                </div>
            </div>
            </form>
              <div class="row">
                <table class="mTable">
                    <thead>
                        <tr>
                            <th scope="col">Название файла</th>
                            <th scope="col">Дата создания</th>
                            <th scope="col">Удалить</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model.Model2){
                         <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Date.ToShortDateString();
                            </td>
                            <td>
                                <form asp-action="DeleteDocument" asp-route-id="@item.Id" asp-controller="Home" asp-anti-forgery="true">
                                    <button type="submit" class="btn-doc">Удалить</button>
                                </form>
                                <form asp-action="DocumentShow" method="get" asp-route-id="@item.Id" asp-controller="Home" asp-anti-forgery="true">
                                    <button type="submit" class="btn-doc">Посмотреть</button>
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

